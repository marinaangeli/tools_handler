<% if params[:action] == 'edit' %>
  <%= simple_form_for @tool do |f| %>
    <%= f.input :name, label: "Edit the tool's name:" %>
    <%= f.input :price %>
    <%= f.input :photo, as: :file , class:"mb-2",
    hint: "You can leave this blank if you're not updating the photo" %>
    <%= f.submit "Update", :class => "btn-yellow-lg" %>
  <% end %>
<% else %>
  <%= simple_form_for @tool do |f| %>
    <%= f.input :name, label: "Enter new tool's name:" %>
    <%= f.input :price %>
    <%= f.input :photo, as: :file , class:"mb-2" %>
    <%= f.submit "Add new tool", :class => "btn-yellow-lg" %>
  <% end %>
<% end %>
