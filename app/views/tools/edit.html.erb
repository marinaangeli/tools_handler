<div class="container">
  <div class="d-flex justify-content-center">
    <div  class="center-form shadow">
      <%= simple_form_for @tool do |f| %>
        <%= f.input :name, label: "Edit the tool's name:" %>
        <%= f.input :price %>
        <%= f.input :photos, as: :file , input_html: { multiple: true }, class:"mb-2",
          hint: "You can leave this blank if you're not updating the photo" %>
        <%= f.input :available %>
        <%= f.submit "Update", :class => "btn-yellow-lg" %>
      <% end %>
    </div>
  </div>
</div>
