<div class="container">
  <div class="d-flex justify-content-center">
    <div  class="center-form shadow">
      <%= simple_form_for @tool do |f| %>
        <%= f.input :name, label: "Edit the tool's name:" %>
        <%= f.input :price %>
        <%= f.input :photos, as: :file , input_html: { multiple: true }, required: false, class:"mb-2",
          hint: "You can leave this blank if you're not updating the photo" %>
        <%= f.input :available %>
        <%= f.submit "Update", :class => "btn-yellow-lg" %>
      <% end %>
    </div>
  </div>
  <span class="mb-2"><%= link_to :back do %>
          <i class="fa-solid fa-arrow-left" style="font-size: 30px; color: orange"></i>
        <% end %>
      </span>
</div>
