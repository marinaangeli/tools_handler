<div class="d-flex justify-content-center">
  <div  class="center-form shadow">
    <div class="container d-flex justify-content-center flex-column align-items-center">
      <span class="mt-3" style="font-size: 26px">
        <i style="padding-right: 10px" class="fa-regular fa-user"></i>Forgot your password?</span>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs mt-3 center-form-imput">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>
        <div class="form-actions mb-2">
          <%= f.button :submit, "Reset password", class:"btn-orange" %>
        </div>
      <% end %>
      <span>Already a member? <%= render "devise/shared/links" %> </span>
    </div>
  </div>
</div>
