
<div class="d-flex justify-content-center">
  <div  class="center-form shadow">
    <div class="container d-flex justify-content-center flex-column align-items-center">
      <span class="mt-3" style="font-size: 26px">
        <i style="padding-right: 10px" class="fa-regular fa-pen-to-square"></i>Update your profile</span>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, data: {turbo: false}) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs mt-3">
          <%= f.input :email, required: true, autofocus: true %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
          <%= f.input :avatar, as: :file,
                label: "Add a photo to your profile, or change the current one",
                required: false %>
          <%= f.input :name,
                required: false,
                input_html: { autocomplete: "name" } %>
          <%= f.input :address,
                required: false,
                input_html: { autocomplete: "address" } %>
          <%= f.input :phone,
                required: false,
                input_html: { autocomplete: "phone" } %>
          <%= f.input :password,
                hint: "Leave this blank if you don't want to change your password",
                required: false,
                input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" } %>
          <%= f.input :current_password,
                hint: "Input your current password to confirm changes",
                required: true,
                input_html: { autocomplete: "current-password" } %>
        </div>
        <div class="form-actions mb-3">
          <%= f.button :submit, "Update", class:"btn-orange"  %>
        </div>
      <% end %>
      <%# <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete </p> %>
      <span class="mb-2"><%= link_to :back do %>
          <i class="fa-solid fa-arrow-left" style="font-size: 30px; color: orange"></i>
        <% end %>
      </span>
    </div>
  </div>
</div>
